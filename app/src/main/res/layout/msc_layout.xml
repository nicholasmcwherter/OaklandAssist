<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewMSCTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Math and Science Center Event!"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/textViewMSCName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Details"
        android:layout_below="@+id/textViewMSCTitle"/>
    <TextView
        android:id="@+id/textViewMSCDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Time"
        android:layout_below="@+id/textViewMSCName"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Map"
        android:textColor="@android:color/white"
        android:background="@color/colorAccent"
        android:id="@+id/btnMapMSC"
        android:layout_below="@+id/textViewMSCDescription"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp" />


</RelativeLayout>