<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewEngineeringCenterTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Engineering Center Event!"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/textViewEngineeringCenterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Details"
        android:layout_below="@+id/textViewEngineeringCenterTitle"/>
    <TextView
        android:id="@+id/textViewEngineeringCenterDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Time"
        android:layout_below="@+id/textViewEngineeringCenterName"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Map"
        android:textColor="@android:color/white"
        android:background="@color/colorAccent"
        android:id="@+id/btnMapEngineeringCenter"
        android:layout_below="@+id/textViewEngineeringCenterDescription"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp" />



</RelativeLayout>